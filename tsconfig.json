{
  "compilerOptions": {
    "outDir": "build",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": false
  },
  "include": [
    "hand",
    "action.ts",
    "constants.ts",
    "state.ts",
    "tile.ts",
    "utils.ts"
  ]
}
